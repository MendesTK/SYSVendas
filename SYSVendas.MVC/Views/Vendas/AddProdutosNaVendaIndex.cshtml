@model IEnumerable<SYSVendas.MVC.ViewModels.DetalheVendaViewModel>

@{
    ViewBag.Title = "Produtos";

}

<h2>Produtos</h2>

<p>
    @Html.ActionLink("Adicionar Produto", "AddProduto",  new { id = ViewBag.VendaId }, new { @class = "dialog-window btn btn-info" })

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VendaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qtd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VendaId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produto.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qtd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.VendaProdutoId })
        </td>
    </tr>
}

</table>
